pipeline {
    agent any

    environment{
        DOCKER_HUB_LOGIN_USR='atria2010'
        DOCKER_HUB_LOGIN_PSW='atria@mamun@#'
        IMAGE_NAME='atria2010/learn-repro'
        registry='atria2010/learn-repro'
        registryCredential='atria2010'
        registryUrl='https://index.docker.io/v1/'
        dockerImage=''
    }

    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                bat './gradlew assemble'
            }
        }
        stage('Test') {
            steps {
                bat './gradlew test'
            }
        }
        stage('Build Docker image') {
            steps {
                bat 'gradlew clean docker dockerTag'
            }
        }
        stage('Run Docker Image') {
            steps {
                bat 'gradlew dockerRun'
            }
        }
    }
}